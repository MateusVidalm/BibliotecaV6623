@model List<Usuario>


@{
    ViewData["Title"] = "Listagem de Usuario";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>TIpo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Usuario u in Model)
                {
                    <tr>
                        <td>@u.Nome</td>
                        <td>@u.Login</td>
                        <td>@u.Tipo</td>
                        <td><a href="/Usuario/ExcluirUsuario/@u.Id">Excluir</a></td>

                        <td><a href="/Usuario/EditarUsuario/@u.Id">Editar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
